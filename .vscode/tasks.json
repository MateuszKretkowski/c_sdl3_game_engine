{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SDL3 C",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                // Główne źródła
                "src/main.c",
                "src/glad.c",
                
                // Pliki silnika
                "src/engine/engine.c",
                "src/engine/window.c",
                "src/engine/input.c",
                "src/engine/game.c",
                
                // Pliki grafiki
                "src/graphics/graphics.c",
                "src/graphics/mesh.c",
                "src/graphics/shader.c",
                "src/graphics/textures.c",
                "src/graphics/render.c",
                "src/graphics/resources.c",

                // Utils
                "src/utils/utils.c",

                // Ścieżki do nagłówków
                "-IC:/msys64/ucrt64/include",
                "-IC:/msys64/ucrt64/include/SDL3",
                "-Iinclude",
                "-Iengine",
                "-Igraphics",
                "-Isrc/engine",
                "-Isrc/graphics",
                "-Isrc/utils",
                "-lshlwapi",

                
                // Biblioteki
                "-LC:/msys64/ucrt64/lib",
                "-lSDL3",
                "-lopengl32",

                // Wyjście
                "-o",
                "build/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
