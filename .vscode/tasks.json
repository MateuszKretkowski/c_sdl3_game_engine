{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SDL3 C",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "src/main.c",
                "src/graphics.c",
                "src/glad.c",
                "src/mesh.c",
                "src/utils.c",
                "src/shader.c",
                "src/textures.c",
                "-IC:/msys64/ucrt64/include",         // GÅ‚Ã³wne nagÅ‚Ã³wki MSYS2
                "-IC:/msys64/ucrt64/include/SDL3",     // NagÅ‚Ã³wki SDL3
                "-Iinclude",                           // Twoje wÅ‚asne nagÅ‚Ã³wki (glad.h, graphics.h)
                "-LC:/msys64/ucrt64/lib",              // Folder z bibliotekami .a/.dll.a
                "-lSDL3",
                "-lopengl32",
                "-o",
                "build/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"   // ðŸ‘ˆ TO DODAJESZ â€“ ustawia katalog roboczy
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}
